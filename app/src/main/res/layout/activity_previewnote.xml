<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="722dp"
    tools:context=".previewnote"
    android:layout_margin="7dp"
    app:cardCornerRadius="12dp"
    android:elevation="90dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="722dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/note0"
        android:orientation="vertical"


        >

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="404dp"
            android:layout_height="400dp"

            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/notetit"
            android:layout_width="298dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-370dp"
            android:fontFamily="@font/ubuntu_bold"
            android:textColor="#605F5F"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/notepre"
            android:layout_width="298dp"
            android:layout_height="200dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu_bold"
            android:textColor="#605F5F"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/notepr2"
            android:layout_width="368dp"
            android:layout_height="110dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu_bold"
            android:textColor="#605F5F"
            android:textSize="15dp" />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="-70dp"
            android:numStars="4"
            android:stepSize="0.5"
            android:progressTint="#F5F3DB07"
            />

        <Button
            android:id="@+id/submitRate"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_marginLeft="199dp"
            android:layout_marginTop="-38dp"
            android:layout_marginRight="4dp"
            android:background="#EC7BB5"
            android:text="submit"
            android:textColor="#fff" />

        <ListView
            android:id="@+id/commentstt"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">
        </ListView>

        <EditText
            android:id="@+id/newcomment"
            android:layout_width="327dp"
            android:layout_height="32dp"
            android:hint="Write your comment"
            android:textSize="10dp"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/submitComment"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_marginLeft="199dp"
            android:layout_marginTop="-38dp"
            android:layout_marginRight="4dp"
            android:background="#EC7BB5"
            android:text="submit"
            android:textColor="#fff" />
    </LinearLayout>


</androidx.cardview.widget.CardView>