<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="722dp"
    android:layout_margin="7dp"
    android:elevation="90dp"
    app:cardCornerRadius="12dp"
    tools:context=".previewnote">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/note0"
            android:orientation="vertical"


            >

            <ImageView
                android:id="@+id/post_image"
                android:layout_width="404dp"
                android:layout_height="400dp"

                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/notetit"
                android:layout_width="298dp"
                android:layout_height="87dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-340dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="#605F5F"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/notepre"
                android:layout_width="298dp"
                android:layout_height="342dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="#605F5F"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/notepr2"
                android:layout_width="368dp"
                android:layout_height="142dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="#605F5F"
                android:textSize="15dp" />

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginTop="-40dp"
                android:numStars="4"
                android:progressTint="#F5F3DB07"
                android:stepSize="0.5" />

            <Button
                android:id="@+id/submitRate"
                android:layout_width="60dp"
                android:layout_height="33dp"
                android:layout_marginLeft="199dp"
                android:layout_marginTop="-38dp"
                android:layout_marginRight="4dp"
                android:background="#EC7BB5"
                android:text="submit"
                android:textColor="#fff" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="90dp"
                android:orientation="vertical"
                >

                <ListView
                    android:id="@+id/commentstt"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="0dp">

                </ListView>

                <EditText
                    android:id="@+id/newcomment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="-70dp"
                    android:layout_marginRight="40dp"
                    android:hint="Write Your Comment"
                    android:textSize="15dp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/submitComment"
                    android:layout_width="60dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="199dp"
                    android:layout_marginTop="-90dp"
                    android:layout_marginRight="4dp"
                    android:background="#EC7BB5"
                    android:text="submit"
                    android:textColor="#fff" />

            </LinearLayout>
        </LinearLayout>





</androidx.cardview.widget.CardView>
</ScrollView>