<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="90dp"
    tools:context=".Student_Visitor.previewnote">

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back2"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/prevew">


                <TextView
                    android:id="@+id/notetit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/notepre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textColor="#000000"
                    android:textSize="20dp" />


                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="221dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/notepr2"
                        android:layout_width="368dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/ubuntu_bold"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <RatingBar
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="66dp"
                        android:layout_marginLeft="-350dp"
                        android:layout_marginTop="90dp"
                        android:numStars="4"
                        android:progressTint="#F5F3DB07"
                        android:stepSize="0.5" />

                    <RatingBar
                        android:id="@+id/rating_bar2"
                        android:layout_width="wrap_content"
                        android:layout_height="66dp"
                        android:layout_marginLeft="-199dp"
                        android:layout_marginTop="88dp"
                        android:numStars="4"
                        android:progressTint="#F5F3DB07"
                        android:stepSize="0.5" />

                    <ImageView
                        android:id="@+id/startChat"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_baseline_chat_24" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:paddingBottom="50dp"
                android:orientation="vertical">


                <ListView
                    android:id="@+id/commentstt"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:layout_gravity="center_horizontal"
                    >

                </ListView>


                <EditText
                    android:id="@+id/newcomment"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="45dp"
                    android:hint="Write your comment"
                    android:textSize="10dp"
                    android:inputType="textMultiLine"/>

                <Button
                    android:id="@+id/submitComment"
                    android:layout_width="60dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="-35dp"
                    android:layout_marginRight="4dp"
                    android:background="#FF7058"
                    android:text="POST"
                    android:textColor="#fff" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-33dp"
                    android:background="@drawable/ic_baseline_account_circle_23" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>