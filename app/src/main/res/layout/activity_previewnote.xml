<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="732dp"
    tools:context=".Student_Visitor.previewnote"
    android:layout_margin="0dp"
    app:cardCornerRadius="12dp"
    android:elevation="90dp"
    >
    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="410dp"
        android:layout_height="650dp">

        //////////////

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:background="@drawable/note0"
            android:orientation="vertical"


            >

            <ImageView
                android:id="@+id/post_image"
                android:layout_width="404dp"
                android:layout_height="550dp"

                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/notetit"
                android:layout_width="298dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-510dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="#605F5F"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/notepre"
                android:layout_width="298dp"
                android:layout_height="210dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="#605F5F"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/notepr2"
                android:layout_width="368dp"
                android:layout_height="110dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="90dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="#605F5F"
                android:textSize="15dp" />

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-60dp"
                android:numStars="4"
                android:progressTint="#F5F3DB07"
                android:stepSize="0.5" />

            <Button
                android:id="@+id/submitRate"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-38dp"
                android:layout_marginRight="4dp"
                android:background="#EC7BB5"
                android:text="submit"
                android:textColor="#fff" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="626dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/commentstt"
                    android:layout_width="400dp"
                    android:layout_height="410dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/comment"></ListView>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    />
                <EditText
                    android:id="@+id/newcomment"
                    android:layout_width="250dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="45dp"
                    android:hint="Write your comment"
                    android:textSize="10dp"
                    />

                <Button
                    android:id="@+id/submitComment"
                    android:layout_width="60dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="-35dp"
                    android:layout_marginRight="4dp"
                    android:background="#EC7BB5"
                    android:text="POST"
                    android:textColor="#fff" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_baseline_account_circle_24" />

            </LinearLayout>
            <Button
                android:id="@+id/startChat"
                android:layout_width="60dp"
                android:layout_height="34dp"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="4dp"
                android:background="#EC7BB5"
                android:text=" chat"
                android:textColor="#fff" />
        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>