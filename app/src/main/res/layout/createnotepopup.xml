<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBD4"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="58dp"
            android:layout_marginRight="5dp"
            android:text="Choose Major:"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/spinnerAdmin"
            android:layout_width="336dp"
            android:layout_height="46dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="250dp"
            android:hint="Collage" />
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Load Courses" />

        <TextView
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="Choose Course:"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/spinnerAdmin2"
            android:layout_width="333dp"
            android:layout_height="49dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="250dp"
            android:hint="Collage" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Load Chapters" />


        <TextView
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="Choose Chapter:"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/spinnerAdmin3"
            android:layout_width="322dp"
            android:layout_height="49dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="250dp"
            android:hint="Collage" />

        <EditText
            android:id="@+id/editTextTextMultiLine2"
            android:layout_width="393dp"
            android:layout_height="274dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:hint="Note Body"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/ResetButton"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="7dp"
            android:background="#EB75B2"
            android:text="Post"
            android:textColor="#fff" />


    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="387dp">

        <EditText
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="700dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Note Title"
            android:inputType="textPersonName"
            android:textSize="15dp"
            android:textStyle="italic" />


    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>