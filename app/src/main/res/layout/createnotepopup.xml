<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/prof4"
    android:orientation="vertical"
    tools:context=".Student_Visitor.creatnotepopup">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write and post your note"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginLeft="61dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/dsds"
            />

        <Spinner
            android:id="@+id/spinnerA"
            android:layout_width="333dp"
            android:layout_height="57dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="250dp"
            android:hint="Collage"
            />



        <Spinner
            android:id="@+id/spinnerAd"
            android:layout_width="333dp"
            android:layout_height="57dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="250dp"
            android:hint="Collage" />





        <Spinner
            android:id="@+id/spinnerAdmaaa"
            android:layout_width="333dp"
            android:layout_height="57dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="250dp"
            android:hint="Collage" />

        <EditText
            android:id="@+id/editTextTextMultiLine2"
            android:layout_width="313dp"
            android:layout_height="218dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Note Body"
            android:inputType="textMultiLine"
            android:fontFamily="@font/dsds"/>

        <LinearLayout
            android:layout_width="295dp"
            android:layout_height="99dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/cancel2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:background="#ff7058"
                android:text="Cancel"
                android:textColor="#fff"
                android:fontFamily="@font/dsds"/>

            <Button
                android:id="@+id/ResetButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:background="#ff7058"
                android:text="Post"
                android:textColor="#fff"
                android:fontFamily="@font/dsds"/>
        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="260dp"
        >

        <EditText
            android:id="@+id/Title"
            android:layout_width="290dp"
            android:layout_height="49dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Note Title"
            android:inputType="textPersonName"
            android:textSize="15dp"
            android:textStyle="italic"
            android:fontFamily="@font/dsds"/>


    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>