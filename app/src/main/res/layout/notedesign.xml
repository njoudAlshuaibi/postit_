<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="7dp"
    app:cardCornerRadius="12dp"
    android:elevation="90dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:orientation="vertical"
        android:background="@drawable/note0"

        >

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/noteTitle"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="-230dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/ubuntu_regular"
            android:text="Note Title : "
            android:textColor="#605F5F"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="47dp"
            android:layout_height="130dp"
            android:layout_marginLeft="266dp"
            android:layout_marginTop="59dp"
            android:gravity="center_vertical|center"
            android:orientation="horizontal"
            android:paddingBottom="0dp">


            <ImageButton
                android:id="@+id/fvrt_f2_item"
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="-41dp"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@drawable/ic_baseline_turned_in_not_24" />


            <ImageButton
                android:id="@+id/deleten2"
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="-40dp"
                android:layout_marginRight="-80dp"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@drawable/ic_baseline_delete_24" />

            <ImageButton
                android:id="@+id/remove"
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="-70dp"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@drawable/ic_baseline_turned_in_24" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="18dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="-20dp"
                app:srcCompat="@drawable/twitter" />

        </LinearLayout>

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="-66dp"
            android:numStars="4"
            android:stepSize="0.5"
            android:progressTint="#F5F3DB07"

            />


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-85dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:paddingBottom="0dp">

            <TextView
                android:id="@+id/notedate"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="#605F5F"
                android:textSize="15dp" />


        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />


    </LinearLayout>

</androidx.cardview.widget.CardView>