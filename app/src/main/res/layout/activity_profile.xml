<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:autoMirrored="true"
    android:background="@drawable/back2"
    android:fitsSystemWindows="true"
    tools:context=".Student_Visitor.Profile"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view22"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/menudrawer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A6FFFFFF"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_profile"
            android:layout_width="match_parent"
            android:layout_height="42dp" />

        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="322dp"
            android:layout_height="600dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/prof4"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="24dp">


            <ImageView
                android:layout_width="115dp"
                android:layout_height="95dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/ic_baseline_account_circle_23" />

            <Button
                android:id="@+id/editPRO"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="90dp"
                android:background="@drawable/corner_orang"
                android:fontFamily="@font/dsds"
                android:text="EDIT"
                android:textColor="@color/darkGreen">

            </Button>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <TextView
                    android:text="Username:"
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="-20dp"
                    android:fontFamily="@font/dsds"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:textColor="@color/colorPrimaryDark">

                </TextView>

                <TextView
                    android:id="@+id/namefromDB"
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-274dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/dsds"
                    android:inputType="textEmailAddress"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:textColor="@color/colorPrimaryDark">

                </TextView>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/namekamel"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:layout_marginLeft="-286dp"


                    >

                    <EditText
                        android:id="@+id/profile_name"
                        android:layout_width="274dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="-30dp"
                        android:layout_marginRight="40dp"
                        android:ems="10"
                        android:fontFamily="@font/dsds"
                        android:inputType="textPersonName"
                        android:textSize="15dp"
                        android:textStyle="italic"
                        android:textColor="@color/colorPrimaryDark"/>
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Email:"
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="-20dp"
                    android:fontFamily="@font/dsds"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:textColor="@color/colorPrimaryDark">

                </TextView>

                <TextView
                    android:id="@+id/emailfromDB"
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-274dp"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/dsds"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textSize="15dp"
                    android:textStyle="italic">

                </TextView>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailkamel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-286dp"


                    >

                    <EditText
                        android:id="@+id/profile_email"
                        android:layout_width="274dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:fontFamily="@font/dsds"

                        android:inputType="textEmailAddress"
                        android:textSize="15dp"
                        android:textStyle="italic"
                        android:textColor="@color/colorPrimaryDark"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:text="Major:"
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:fontFamily="@font/dsds"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:textColor="@color/colorPrimaryDark">

                </TextView>
                <Spinner
                    android:id="@+id/spinnereditmajor"
                    android:layout_width="274dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                   android:layout_marginLeft="-269dp"
                    android:hint="Major"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-275dp"
                    android:layout_marginTop="20dp">


                    <TextView
                        android:id="@+id/profile_major"
                        android:layout_width="274dp"
                        android:layout_height="wrap_content"
                       android:layout_marginLeft="0dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:fontFamily="@font/dsds"
                        android:hint="Major"
                        android:inputType="textEmailAddress"
                        android:textSize="15dp"
                        android:textStyle="italic"
                        android:textColor="@color/colorPrimaryDark"/>
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp">

                <Button
                    android:id="@+id/cancel14"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#2da79b"
                    android:fontFamily="@font/dsds"
                    android:text="Cancel"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/saveChangesBtn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="#2da79b"
                    android:fontFamily="@font/dsds"
                    android:text="Save changes"
                    android:textColor="#fff" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>